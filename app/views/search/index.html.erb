<h1>Search</h1>
<%= form_with url: "/search", method: :get do |form| %>
   <%= form.label :query, "Search for:" %>
   <%= form.text_field :query, :value => @query %>
   <%= form.submit "Search" %>
 <% end %>


 <p class="mt-3"> You Searched for  '<%= @query %>'</p>

 <h2>Results</h2>

<% if @devices.present? %>
<p>Hits: <%= @devices.count %>
<ul>
   <% @devices.each do |c| %>
   <li><%= c.name %></li>  
   <% end %>
</ul>
<% end %>
