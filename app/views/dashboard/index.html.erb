<h1>Dashboard</h1>
<br>
<br>
<h2>Device Usage</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>total</th>
      <th>Assigned</th>
      <th>Available</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
 
    <tr>
      <td><%= category.name%></td>
      <td><%= category.devices.count%></td>
      <td><%= category.devices.all.where.not(:employee => nil).count%></td>
       <td><%= category.devices.all.where(:employee => nil).count%></td>
    
    </tr>

    <% end %>
  </tbody>
 
</table>

<br>
<br>
<h2>Software Compliance</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>License Count</th>
      <th>Employee count</th>
      <th>Complient?</th>
    </tr>
  </thead>
  <tbody>
    <% @softwares.each do |software| %>
 
    <tr>
      <td><%= software.name%></td>
      <td><%= software.license_count%></td>
      <td><%= software.employees.count%></td>
      <td><%= software.compliant? %></td>
      
    </tr>

    <% end %>
  </tbody>
 
</table>


