<h1>Dashboard</h1>
<br>
<br>
<h2>Device Usage</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>total</th>
      <th>Assigned</th>
      <th>Available</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.all.each do |category| %>
 
    <tr>
      <td><%= category.name%></td>
      <td><%= category.devices.count%></td>

      <td><%= category.employees.uniq.count%></td>
      <!--found this method of showing the available categories below online becasue it wasnt shown in class-->
      <td><%= Category.left_outer_joins(:devices).where(devices: { id: nil }).distinct.count %></td>
    </tr>

    <% end %>
  </tbody>
 
</table>

<br>
<br>
<h2>Software Compliance</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>License Count</th>
      <th>Employee count</th>
      <th>Complient?</th>
    </tr>
  </thead>
  <tbody>
    <% @softwares.each do |software| %>
 
    <tr>
      <td><%= software.name%></td>
      <td><%= software.license_count%></td>
      <td><%= software.employees.count%></td>
      <td><%= software.compliant? %></td>
      
    </tr>

    <% end %>
  </tbody>
 
</table>


